<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<ScrollPane prefHeight="1500.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.desktop.RevenueViewerController">
    <content>
        <AnchorPane prefHeight="1500.0" prefWidth="1105.0" style="-fx-background-color: teal;">
            <children>
                <TableView fx:id="tableView" layoutX="67.0" layoutY="107.0" prefHeight="552.0" prefWidth="904.0" style="-fx-background-color: #8da8a1;">
                    <columns>
                        <TableColumn fx:id="dateColumn" prefWidth="249.0" text="Date" />
                        <TableColumn fx:id="revenueColumn" prefWidth="320.0" text="REVENUE" />
                        <TableColumn fx:id="lossColumn" prefWidth="336.0" text="CANCELLATION LOSS" />
                    </columns>
                </TableView>


                <Label alignment="CENTER" layoutX="393.0" layoutY="44.0" prefHeight="47.0" prefWidth="255.0" style="-fx-background-color: #8da8a1;" text="REVENUE SUMMARY">
                    <font>
                        <Font name="System Bold Italic" size="22.0" />
                    </font>
                </Label>
                <Button layoutX="945.0" layoutY="44.0" mnemonicParsing="false" onAction="#Back" prefHeight="34.0" prefWidth="98.0" style="-fx-background-color: #8da8a1;" text="RETURN">
                    <font>
                        <Font size="17.0" />
                    </font>
                </Button>
                
                <Label layoutX="67.0" layoutY="670.0" prefHeight="30.0" prefWidth="105.0" style="-fx-font-weight: bold; -fx-text-fill: white;" text="Filters:" textFill="#6b2d2d">
               <font>
                  <Font name="System Bold Italic" size="22.0" />
               </font></Label>
                <DatePicker fx:id="datePicker" layoutX="67.0" layoutY="710.0" promptText="Select Date" />
                <RadioButton fx:id="upto" layoutX="267.0" layoutY="708.0" prefHeight="29.0" prefWidth="147.0" style="-fx-background-color: grey;" text="Upto this date">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font></RadioButton>
                <RadioButton fx:id="from" layoutX="421.0" layoutY="707.0" prefHeight="28.0" prefWidth="140.0" style="-fx-background-color: grey;" text="From this date">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font></RadioButton>


                <Label layoutX="67.0" layoutY="747.0" prefHeight="31.0" prefWidth="174.0" style="-fx-font-weight: bold; -fx-text-fill: white;" text="Revenue Range:">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font></Label>
                <TextField fx:id="minrevenue" layoutX="280.0" layoutY="750.0" promptText="Min" />
                <TextField fx:id="maxrevenue" layoutX="445.0" layoutY="750.0" promptText="Max" />

                <Button fx:id="filterButton" layoutX="67.0" layoutY="790.0" style="-fx-background-color: #8da8a1;" text="Apply Filters" />
            <Button fx:id="ResetButton" layoutX="226.0" layoutY="790.0" style="-fx-background-color: #8da8a1;" text="Reset Filters" />
            </children>
        </AnchorPane>
    </content>
</ScrollPane>
