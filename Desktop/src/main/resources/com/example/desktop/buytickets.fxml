<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToHeight="true" fitToWidth="true" stylesheets="@../../../css/buytickets.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.desktop.BuyTicketsController">
    <content>
<BorderPane fx:id="bpane" prefHeight="700" prefWidth="1000">


    <top>
        <HBox alignment="CENTER" prefHeight="60" prefWidth="877.0" spacing="20" styleClass="top-bar">
            <Label alignment="CENTER" prefHeight="24.0" prefWidth="882.0" styleClass="title-label" text="              Buy Tickets">
                  <HBox.margin>
                     <Insets />
                  </HBox.margin></Label>
               <Button mnemonicParsing="false" onAction="#Return" prefHeight="35.0" prefWidth="86.0" styleClass="total-label" text="RETURN">
                  <HBox.margin>
                     <Insets />
                  </HBox.margin>
               </Button>
        </HBox>
    </top>


    <center>
        <VBox alignment="TOP_CENTER" spacing="20">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label styleClass="form-label" text="Username :" />
                <TextField fx:id="usernameField" prefWidth="200" promptText="Full name or username " />
            </HBox>


            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label styleClass="form-label" text="Movie :" />
                <ComboBox fx:id="movieCombo" prefHeight="25.0" prefWidth="301.0" promptText="Select a movie">
               <HBox.margin>
                  <Insets left="25.0" />
               </HBox.margin></ComboBox>
            </HBox>


            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label styleClass="form-label" text="Date :" />
                <DatePicker fx:id="datePicker" prefHeight="19.0" prefWidth="201.0" promptText="Select Date">
               <HBox.margin>
                  <Insets left="35.0" />
               </HBox.margin></DatePicker>
            </HBox>


            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label styleClass="form-label" text="Showtime :" />
                <ComboBox fx:id="showtimeCombo" prefHeight="18.0" prefWidth="301.0" promptText="Select showtime details" />
            </HBox>


            <Label fx:id="theatreLabel" styleClass="theatre-label" text="Theatre: " />


            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label styleClass="form-label" text="Legend" />
                <Button disable="true" styleClass="seat-free" text="Free">
               <HBox.margin>
                  <Insets left="18.0" />
               </HBox.margin></Button>
                <Button disable="true" styleClass="seat-booked" text="Booked" />
                <Button disable="true" styleClass="seat-selected" text="Selected" />
            </HBox>


            <GridPane fx:id="seatGrid" alignment="CENTER" hgap="5" vgap="5">

            </GridPane>


            <VBox alignment="CENTER" spacing="10" styleClass="summary-box">
                <Label styleClass="form-label" text="Booked Seats:" />
                <TableView fx:id="bookingTable" prefHeight="400.0" prefWidth="200.0" style="-fx-background-color: teal;">
                    <columns>
                        <TableColumn fx:id="seatColumn" prefWidth="405.0" style="-fx-background-color: grey;" text="Seat" />
                        <TableColumn fx:id="priceColumn" minWidth="0.0" prefWidth="530.0" style="-fx-background-color: grey;" text="Price" />
                    </columns>
                </TableView>
                <Label fx:id="totalPriceLabel" styleClass="total-label" text="Total : 0" />
            </VBox>

            
            <Button fx:id="buyButton" styleClass="buy-button" text="Confirm Purchase" />
        </VBox>
    </center>

</BorderPane>
    </content>
</ScrollPane>
