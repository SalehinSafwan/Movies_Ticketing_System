<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400" prefWidth="600" stylesheets="@../../../css/verifytickets.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.example.desktop.VerifyTicketsController">


    <top>
        <HBox alignment="CENTER" prefHeight="60" styleClass="top-bar">
            <Label styleClass="title-label" text="Verify Tickets" />
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="30" left="30" right="30" top="30" />
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label styleClass="form-label" text="Username:" />
                <TextField fx:id="usernameField" prefWidth="200" promptText="username given in purchase" />
            </HBox>


            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label prefHeight="20.0" prefWidth="70.0" styleClass="form-label" text="PNR:" />
                <TextField fx:id="pnrField" prefWidth="200" promptText="PNR shown in receipt" />
            </HBox>


            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="verifyButton" prefHeight="42.0" prefWidth="123.0" styleClass="verify-button" text="VERIFY" />
            <VBox.margin>
               <Insets top="20.0" />
            </VBox.margin>
            </HBox>

        </VBox>
    </center>
   <bottom>
          <Button fx:id="backButton" prefWidth="128.0" styleClass="back-button" text="RETURN" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
</BorderPane>
