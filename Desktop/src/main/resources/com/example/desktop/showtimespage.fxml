<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="700" prefWidth="900" stylesheets="@../../../css/showtimes.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.example.desktop.ShowtimesController">


    <top>
        <HBox alignment="CENTER" prefHeight="60" spacing="30" styleClass="top-bar">
            <Label styleClass="title-label" text="All Showtimes" />
        </HBox>
    </top>


    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane">
            <FlowPane fx:id="showtimesFlowPane" alignment="CENTER" hgap="30" styleClass="flow-pane" vgap="30">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
            </FlowPane>
        </ScrollPane>
    </center>


    <bottom>
        <HBox alignment="BOTTOM_LEFT" prefHeight="60" styleClass="bottom-bar">
            <Button styleClass="nav-button" text="RETURN" />
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
