<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/showtimePoster"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/showtimeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8D942B"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/showtimeDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#BBDEFB"
                android:text="Date: "/>

            <TextView
                android:id="@+id/showtimeTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#C8E6C9"
                android:text="Time: "/>

            <TextView
                android:id="@+id/showtimeTheatre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFE0B2"
                android:text="Theatre: "/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>